<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devaon.early_buddy_android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".PlaceFavoriteActivity" />
        <activity android:name=".feature.SetCompleteActivity"
            android:theme="@style/AppTheme.StatusBar"
            />
        <activity android:name=".feature.place_search_list.PlaceSelectEndActivity"
            android:theme="@style/AppTheme.StatusBar"/>
        <activity android:name=".feature.place_search_list.PlaceSelectStartActivity"
            android:theme="@style/AppTheme.StatusBar"/>
        <activity android:name=".PlaceRegister" />

        <activity
            android:name=".feature.place_search_list.PlaceSearchActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.StatusBar"/>
        <activity
            android:name=".feature.place_select_list.PlaceSelectActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.StatusBar"
            />

        <activity android:name=".feature.ScheduleActivity" />
        <activity android:name=".feature.SetNicknameActivity"
            android:theme="@style/AppTheme.StatusBar" />

        <activity android:name=".feature.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>