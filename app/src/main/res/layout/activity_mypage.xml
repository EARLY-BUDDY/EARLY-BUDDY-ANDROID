<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/main_color">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_back"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마이페이지"
            android:textSize="17sp"
            android:fontFamily="@font/notosans_medium"
            android:gravity="center"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="-6sp"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/act_mypage_iv_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/img_mypage_back"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/act_mypage_iv_back">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/act_mypage_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/notosans_regular"
                android:text="전체 알림"
                android:textSize="16sp"/>

            <Switch
                android:id="@+id/visibilitySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/act_mypage_tv_1"/>
<!--                style="@style/settingSwitch"-->

            <View
                android:layout_width="370dp"
                android:layout_height="0.2dp"
                android:layout_marginTop="15dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@+id/act_mypage_tv_1"
                app:layout_constraintStart_toStartOf="@id/act_mypage_tv_1"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/act_mypage_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/notosans_regular"
                android:text="계정 관리"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/act_mypage_tv_2"
                app:layout_constraintBottom_toBottomOf="@id/act_mypage_tv_2"/>

            <View
                android:layout_width="370dp"
                android:layout_height="0.2dp"
                android:layout_marginTop="15dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@+id/act_mypage_tv_2"
                app:layout_constraintStart_toStartOf="@id/act_mypage_tv_2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/act_mypage_tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/notosans_regular"
                android:text="자주 가는 장소"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/act_mypage_tv_3"
                app:layout_constraintBottom_toBottomOf="@id/act_mypage_tv_3"/>

            <View
                android:layout_width="370dp"
                android:layout_height="0.2dp"
                android:layout_marginTop="15dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@+id/act_mypage_tv_3"
                app:layout_constraintStart_toStartOf="@id/act_mypage_tv_3"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/act_mypage_tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/notosans_regular"
                android:text="오픈소스 라이선스"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/act_mypage_tv_4"
                app:layout_constraintBottom_toBottomOf="@id/act_mypage_tv_4"/>

            <View
                android:layout_width="370dp"
                android:layout_height="0.2dp"
                android:layout_marginTop="15dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@+id/act_mypage_tv_4"
                app:layout_constraintStart_toStartOf="@id/act_mypage_tv_4"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/act_mypage_tv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/notosans_regular"
                android:text="이용약관"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/act_mypage_tv_5"
                app:layout_constraintBottom_toBottomOf="@id/act_mypage_tv_5"/>

            <View
                android:layout_width="370dp"
                android:layout_height="0.2dp"
                android:layout_marginTop="15dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@+id/act_mypage_tv_5"
                app:layout_constraintStart_toStartOf="@id/act_mypage_tv_5"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/act_mypage_tv_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/notosans_regular"
                android:text="개인정보 처리방침"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/act_mypage_tv_6"
                app:layout_constraintBottom_toBottomOf="@id/act_mypage_tv_6"/>

            <View
                android:layout_width="370dp"
                android:layout_height="0.2dp"
                android:layout_marginTop="15dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@+id/act_mypage_tv_6"
                app:layout_constraintStart_toStartOf="@id/act_mypage_tv_6"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>