<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/dialog_fragment_place_favorite_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_background"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_fragment_place_favorite_tv_icon_ment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/notosans_regular"
                    android:lineHeight="10sp"
                    android:lineSpacingExtra="12sp"
                    android:text="아이콘을 선택해주세요."
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/dialog_fragment_place_favorite_iv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_cancel_dialogue" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/dialog_fragment_place_favorite_ll_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/dialog_fragment_place_favorite_ll_icon_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dialog_fragment_place_favorite_iv_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/selector_act_favorite_change_iv_home" />

                    <TextView
                        android:id="@+id/dialog_fragment_place_favorite_tv_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="집" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dialog_fragment_place_favorite_ll_icon_office"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dialog_fragment_place_favorite_iv_office"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/selector_act_favorite_change_iv_office" />

                    <TextView
                        android:id="@+id/dialog_fragment_place_favorite_tv_office"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="회사" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/dialog_fragment_place_favorite_ll_icon_school"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dialog_fragment_place_favorite_iv_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/selector_act_favorite_change_iv_school" />

                    <TextView
                        android:id="@+id/dialog_fragment_place_favorite_tv_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="학교" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/dialog_fragment_place_favorite_ll_icon_other"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dialog_fragment_place_favorite_iv_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/selector_act_favorite_change_iv_other" />

                    <TextView
                        android:id="@+id/dialog_fragment_place_favorite_tv_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="기타" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/dialog_fragment_place_favorite_tv_ok"
                android:layout_width="266dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginTop="29dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/act_place_round_rect_blue_full"
                android:fontFamily="@font/notosans_medium"
                android:gravity="center"
                android:text="확인"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>