<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.initial_join.PlaceFavoriteActivity">


    <TextView
        android:id="@+id/act_place_favorite_tv_ment"
        android:layout_width="206dp"
        android:layout_height="94dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="56dp"
        android:lineSpacingExtra="8sp"
        android:text="자주 가는 장소를\n등록해주세요."
        android:textColor="@color/black"


        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/act_place_favorite_cl_register_first"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="52dp"

        android:background="@drawable/act_place_favorite_round_rect_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_place_favorite_tv_ment">

        <TextView
            android:id="@+id/act_place_favorite_tv_register_first"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="장소를 등록해주세요."
            android:textColor="@color/gray"

            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/act_place_favorite_cl_register_second"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/act_place_favorite_round_rect_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_place_favorite_cl_register_first">

        <TextView
            android:id="@+id/act_place_favorite_tv_second"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:hint="장소를 등록해주세요."
            android:textColor="@color/gray"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/act_place_favorite_cl_register_third"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/act_place_favorite_round_rect_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_place_favorite_cl_register_second">

        <TextView
            android:id="@+id/act_place_favorite_tv_third"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:hint="장소를 등록해주세요."
            android:textColor="@color/gray"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>


<TextView
android:background="@drawable/act_place_round_rect_gray_full"
android:fontFamily="@font/notosans_medium"
android:gravity="center"
android:id="@+id/act_place_favorite_tv"
android:layout_height="49dp"
android:layout_marginEnd="38dp"
android:layout_marginStart="38dp"
android:layout_marginTop="54dp"
android:layout_width="match_parent"
android:text="등록하기"
android:textColor="@color/white"
android:textSize="15sp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.0"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/act_place_favorite_cl_register_third" />


    <TextView
        android:id="@+id/act_place_favorite_tv_skip"
        android:layout_width="73dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:text="건너뛰기"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_place_favorite_tv" />

<ImageView
android:cropToPadding="true"
android:id="@+id/dialog_fragment_place_favorite_iv_select_one"
android:layout_height="80dp"
android:layout_marginStart="41dp"
android:layout_width="78dp"
android:paddingBottom="0dp"
android:paddingLeft="0dp"
android:paddingRight="0dp"
android:paddingTop="0dp"
app:layout_constraintBottom_toBottomOf="@+id/act_place_favorite_cl_register_first"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="@+id/act_place_favorite_cl_register_first"
app:srcCompat="@drawable/ic_choice" />

<ImageView
android:cropToPadding="true"
android:id="@+id/dialog_fragment_place_favorite_iv_select_two"
android:layout_height="80dp"
android:layout_marginStart="41dp"
android:layout_width="78dp"
android:paddingBottom="0dp"
android:paddingLeft="0dp"
android:paddingRight="0dp"
android:paddingTop="0dp"
app:layout_constraintBottom_toBottomOf="@+id/act_place_favorite_cl_register_second"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="@+id/act_place_favorite_cl_register_second"
app:srcCompat="@drawable/ic_choice" />

<ImageView
android:cropToPadding="true"
android:id="@+id/dialog_fragment_place_favorite_iv_select_three"
android:layout_height="80dp"
android:layout_marginStart="41dp"
android:layout_width="78dp"
android:paddingBottom="0dp"
android:paddingLeft="0dp"
android:paddingRight="0dp"
android:paddingTop="0dp"
app:layout_constraintBottom_toBottomOf="@+id/act_place_favorite_cl_register_third"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="@+id/act_place_favorite_cl_register_third"
app:srcCompat="@drawable/ic_choice" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="485dp"
        android:layout_height="224dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img_" />

</androidx.constraintlayout.widget.ConstraintLayout>