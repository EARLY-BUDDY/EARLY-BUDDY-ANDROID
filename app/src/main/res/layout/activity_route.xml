<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.route.RouteActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/act_route_cl_top"
        android:layout_width="0dp"
        android:layout_height="141dp"
        android:background="@drawable/act_route_bottom_left_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/act_route_tv_promise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="-7sp"
            android:text="SOPT 데모데이 "
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/act_route_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@+id/act_route_tv_promise"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/act_route_tv_promise" />

        <ImageView
            android:id="@+id/act_route_iv_time_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_time_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/act_route_iv_back" />

        <TextView
            android:id="@+id/act_route_tv_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="6sp"
            android:text="오후 12:20"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/act_route_iv_time_img"
            app:layout_constraintStart_toEndOf="@id/act_route_iv_time_img"
            app:layout_constraintTop_toTopOf="@+id/act_route_iv_time_img" />

        <TextView
            android:id="@+id/act_route_tv_until"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="6sp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/act_route_iv_time_img"
            app:layout_constraintStart_toEndOf="@id/act_route_tv_time_value"
            app:layout_constraintTop_toTopOf="@+id/act_route_iv_time_img"
            tools:text="까지" />

        <ImageView
            android:id="@+id/act_route_iv_location_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.5dp"
            android:src="@drawable/ic_location_white"
            app:layout_constraintEnd_toEndOf="@+id/act_route_iv_time_img"
            app:layout_constraintStart_toStartOf="@+id/act_route_iv_time_img"
            app:layout_constraintTop_toBottomOf="@+id/act_route_iv_time_img" />

        <TextView
            android:id="@+id/act_route_tv_location_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="6sp"
            android:text="오렌지팜 서초센터"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/act_route_iv_location_img"
            app:layout_constraintStart_toStartOf="@+id/act_route_tv_time_value"
            app:layout_constraintTop_toTopOf="@+id/act_route_iv_location_img" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/act_route_iv_walk_human"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_walking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/act_route_cl_top"
        android:layout_marginStart="25dp"
        android:layout_marginTop="42dp"/>

    <ImageView
        android:id="@+id/act_route_iv_walk_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_walk_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/act_route_tv_start_point"
        android:layout_marginStart="56dp"/>

    <TextView
        android:id="@+id/act_route_tv_start_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="24dp"
        android:letterSpacing="-0.05"
        android:lineSpacingExtra="6sp"
        android:text="집 : 서울특별시 광진구 아차산로 463-4"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_route_cl_top" />

    <TextView
        android:id="@+id/act_route_tv_walk_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/act_route_tv_start_point"
        app:layout_constraintTop_toBottomOf="@id/act_route_tv_start_point"
        android:layout_marginTop="7dp"
        android:textSize="12sp"
        android:textColor="@color/light_gray"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="6sp"
        android:text="도보 642m"
        />

    <ImageView
        android:id="@+id/act_home_iv_horizon_line"
        android:layout_width="0dp"
        android:layout_height="0.25dp"
        android:layout_marginTop="14.5dp"
        android:layout_marginEnd="15.5dp"
        android:background="#707070"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="61dp"
        app:layout_constraintTop_toBottomOf="@+id/act_route_iv_walk_line" />

    <androidx.recyclerview.widget.RecyclerView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/act_route_rv_riding_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/act_home_iv_horizon_line" />
</androidx.constraintlayout.widget.ConstraintLayout>