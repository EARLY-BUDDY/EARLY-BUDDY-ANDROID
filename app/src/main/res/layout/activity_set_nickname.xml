<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="104dp"
        android:includeFontPadding="false"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="9sp"
        android:text="얼리버디와 함께할"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView29"
        android:layout_width="192dp"
        android:layout_height="29dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="85dp"
        android:includeFontPadding="false"
        android:letterSpacing="-0.04"
        android:lineSpacingExtra="9sp"
        android:text="닉네임을 설정해주세요."
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121.8dp"
        android:layout_marginTop="47.2dp"
        android:layout_marginEnd="121.6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView29"
        app:srcCompat="@drawable/img_eb" />


    <TextView
        android:id="@+id/btn_nickname_write"
        android:layout_width="244dp"
        android:layout_height="54dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="48.2dp"
        android:layout_marginEnd="51dp"
        android:background="@drawable/round_rect_blue"

        android:gravity="center"
        android:hint="한글 6글자 이내로 적어주세요."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="328dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="16dp"

        android:layout_marginBottom="30dp"
        android:background="@drawable/round_rect_gray"
        android:gravity="center"
        android:hint="다음"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_nickname_write"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>